<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <ImageView
	    android:id="@+id/mainChronoImage"
	    android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stopwatchsmall" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mainChronoImage"
        android:text="Welcome to the TrailTracker" />
    
    <TextView
        android:id="@+id/text2"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text1"
        android:text="To start a new TrailTracking push the start button!" />
    
    <Button
        android:id="@+id/buttonToTracking"
        android:visibility="visible"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text2"
        android:layout_height="wrap_content"
        android:text="Start new TrailTracking" />
    
    <TextView
        android:id="@+id/text3"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttonShowRoutes"
        android:text="Explore your saved tracks" />
    
    <Button
        android:id="@+id/buttonShowRoutes"
        android:visibility="visible"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="Your saved routes" />

</RelativeLayout>